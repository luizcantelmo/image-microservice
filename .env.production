# Microservice Configuration - Production (Hostinger VPS)
# =========================================================
# Microserviço APENAS para processar imagens
# Não acessa: Tiny ERP, Google Drive, Supabase
# Apenas recebe requisições HTTP e retorna imagens processadas

# Flask
DEBUG=False
ENVIRONMENT=production
FLASK_PORT=5001
FLASK_HOST=0.0.0.0

# CORS (permitir requisições do frontend)
ALLOW_CORS=True
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO

# Image Processing Configuration
OUTPUT_IMAGE_QUALITY=90
PADDING_X=30
PADDING_Y=30
LINE_HEIGHT_MULTIPLIER=1.2
PRODUCT_BLOCK_WIDTH_PERCENT=0.45

# Font Sizes (pixels)
FONT_DESCRIPTION_SIZE=28
FONT_REF_SIZE_PROMO=22
FONT_PRICE_SIZE=30
FONT_ESGOTADO_SIZE=40

# Request Timeouts (segundos)
REQUEST_TIMEOUT=30
TASK_TIMEOUT=300
MAX_RETRIES=3
MAX_PRODUCTS_PER_REQUEST=10

# Redis (desabilitado - não necessário para processamento simples)
USE_REDIS=False
REDIS_HOST=localhost
REDIS_PORT=6379
